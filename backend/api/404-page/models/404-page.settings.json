{
  "kind": "singleType",
  "collectionName": "404_pages",
  "info": {
    "name": "404-page"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "default": "404 ... You're Lost!"
    },
    "description": {
      "type": "string",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Molestie aliquam iaculis facilisis sit pharetra pellentesque ullamcorper.",
      "required": false
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "button": {
      "type": "component",
      "repeatable": false,
      "component": "general.link"
    }
  }
}
