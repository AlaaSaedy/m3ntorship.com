    "side_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "team_images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "repo_btn": {
      "type": "component",
      "repeatable": false,
      "component": "general.link"
    },
    "project_btn": {
      "type": "component",
      "repeatable": false,
      "component": "general.link"
    }
